
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid text-center">
    <a class="navbar-brand text-center" href="/"><img style="width: 29px;
    position: relative;
    left: -6px;
    top: -3px;" src="logo-2.png">Freshworks Software Academy</a>
  </div>
</nav>



<div class="form-container">
  <%= form_with(url: "applicant", method: "get",id:"search-bar" ) do %>
    <div class="inner-form">
      <div class="input-field first-wrap">
        <div class="svg-wrapper">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
            <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"></path>
          </svg>
        </div>
        <%= email_field_tag "email",nil, placeholder: "Enter your email",autofocus: true,required: true, autocomplete: 'off'%>
      </div>
      <div class="input-field secondButton-wrap">
          <%= submit_tag "Search", class:"btn-search"%>
      </div>
    </div>
  <% end %>
</div>

<% unless @candidates.nil? %>
  <table class="table table-striped" id="candidate-details">
   <%if @candidates.empty? %>
    <h2 class="text-center">Please enter the correct email address</h2>
   <% else %>
   <%eligible =false %>
  <% @candidates.each do|candidate|%>
    <% if candidate.eligible? && !eligible%>
      <%eligible=true%>
      <div class="alert alert-primary text-center"  id="alert" role="alert">
        Thank you for your interest in Freshworks Software Academy. we will have an online entrance examination <strong>(FSAT)</strong> on <strong>14 Aug, 2021</strong>. You will be able begin and complete the examination within 1 hour, anytime between 10 am- 5 pm IST on the day of the examination. <%= link_to  "Read More", details_path %>
      </div>
    <%break %>
   <% end %>
  <% end %>

    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col"> FSAT Eligibility</th>
      </tr>
    </thead>
    <tbody>
      <% @candidates.each do|candidate|%>
        <tr>
          <td scope="row"><%=candidate.name%></td>
          <td style="word-break:break-all;width:53%"><%=candidate.email%></td>
          <td>
            <% if candidate.eligible?%>
              <strong id="eligible">Eligible</strong>
            <%else%>
              <strong id="not-eligible">Not Eligible</strong>
            <% end %>
           </td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
<% end %>
